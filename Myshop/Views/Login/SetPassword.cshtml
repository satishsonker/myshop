
@{
    ViewBag.Title = "SetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<form action='@Url.Action("ResetPassword", "login")' method="post" style="margin-top:60px">
    <div class="container">
        @{
            if (ViewBag.loginStatus != null)
            {<div class="alert alert-warning text-center alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> @ViewBag.loginStatus
        </div>}

        }
        <div class="login">
            <h2>Set Password</h2>
            <fieldset>
                <input type="email" required="required" placeholder="Username" name="ss" disabled="disabled" value="@ViewBag.username" />
                <input type="hidden" name="username" value="@ViewBag.username" />
                <input type="password" required="required" placeholder="Password" name="password" />
                <input type="password" required="required" placeholder="Confirm Password" name="confirmpassword" />
            </fieldset>
            <input type="submit" value="Set Password" />
            <div class="utilities">
                @Html.ActionLink("Login", "login")
                <a href="#">Sign Up &rarr;</a>
            </div>
        </div>
    </div>

</form>

