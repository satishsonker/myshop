<form action="/" method="post" style="margin-top:60px" id="brandform">
    <div class="container">

        <div class="holder">
            <h3 class="text-center">Product Brand</h3>
            <fieldset>
                <input type="hidden" value="0" id="brandid" name="brandid" />
                <div class="control">
                    <label>Shop Name</label>
                    @Html.DropDownList("ShopId", new SelectList(ViewBag.ShopList, "ShopId", "ShopName"), "Select Shop", new { required = "required" })<p class="requiredControl"> *</p>
