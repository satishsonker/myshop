
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Areas/StockManagement/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Stock/Masters/Product.js"></script>
@*@using (Html.BeginForm("SetProduct", "Masters", new { area = "StockManagement" }, FormMethod.Post, new { style = "margin-top:60px" }))
{*@
<form action="/" method="post" style="margin-top:60px" id="proform">
    <div class="container">
        <div class="holder2">
            <h3 class="text-center">Product</h3>
            <fieldset>
                <div class="one">
                    <div class="control">
                        <input type="hidden" value="0" id="productid" name="productid" />
                        <label>Shop Name</label>
                        @Html.DropDownList("ShopId", new SelectList(ViewBag.ShopList, "ShopId", "ShopName"), "Select Shop", new { required = "required" })<p class="requiredControl"> *</p>
                    </div>
                    <div class="control">
                        <label>Select Category</label>
                        <select id="catid" name="catid" disabled="disabled" class="disableCtrl" required="required">
                            <option value="">Select Category</option>
                        </select><p class="requiredControl">*</p>
                    </div>
                    <div class="control">
                        <label>Select Sub Category</label>
                        <select id="subcatid" name="subcatid" disabled="disabled" class="disableCtrl" required="required">
                            <option value="">Select Sub Category</option>
                        </select><p class="requiredControl">*</p>
                    </div>
                    <div class="control">
                        <label>Product Name</label>
                        <input type="text" required="required" placeholder="Enter Product Name" id="productname" name="productname" /><p class="requiredControl"> *</p>
                    </div>
                    <div class="control">
                        <label>Description</label>
                        <input type="text" placeholder="Enter Product Description" id="desc" name="desc" />
                    </div>
                </div>
                <div class="one">
                    <div class="control">
                        <label>Product Code</label>
                        <input type="text" placeholder="Enter Product Code" id="productcode" name="productcode" />
                    </div>
                    <div class="control">
                        <label>Product Min Quantity</label>
                        <input type="text" required="required" placeholder="Enter Product Min Quantity" id="minquantity" name="minquantity" />
                        <p class="requiredControl"> *</p>
                    </div>
                    <div class="control">
                        <label>Select Product Unit</label>
                        <select id="unitid" name="unitid" disabled="disabled" class="disableCtrl" required="required">
                            <option value="">Select Product Unit</option>
                        </select><p class="requiredControl">*</p>
                    </div>
                </div>

            </fieldset>

            @{
                string ViewDataName = "getProducts";
            }
            @Html.Partial("_ButtonGroup", ViewDataName)

        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="ProductName">Product</th>
                    <th id="CatName">Category</th>
                    <th id="SubCatName">Sub Category</th>
                    <th id="Description" title="Product Description">Desc</th>
                    <th id="ProductCode">ProductCode</th>
                    <th id="UnitName">Unit</th>
                    <th id="MinQuantity">Min Qty</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Sub Category</th>
                    <th>Desc</th>
                    <th>ProductCode</th>
                    <th>Unit</th>
                    <th>Min Qty</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
    </form>
    @*}*@
