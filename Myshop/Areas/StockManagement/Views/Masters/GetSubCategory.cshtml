
@{
    ViewBag.Title = "GetSubCategory";
    Layout = "~/Areas/StockManagement/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Stock/Masters/SubCat.js"></script>
@*@using (Html.BeginForm("SetSubCategory", "Masters", new { area = "StockManagement" }, FormMethod.Post, new { style = "margin-top:60px" }))
    {*@
<form action="/" method="post" style="margin-top:60px" id="subcatform">
    <div id="loader" data-request-url="@Url.Action("GetCatogaries", "Masters",new {area="StockManagement" })"></div>
    <div class="container">
        <div class="holder">
            <h3 class="text-center">Product Sub Category</h3>
            <fieldset>
                <div class="control">
                    <input type="hidden" value="0" id="subcatid" name="subcatid" />
                    <label>Shop Name</label>
                    @Html.DropDownList("ShopId", new SelectList(ViewBag.ShopList, "ShopId", "ShopName"), "Select Shop", new { required = "required" })<p class="requiredControl"> *</p>
                </div>
                <div class="control">
                    <label>Select Category</label>
                    <select id="catid" name="catid" disabled="disabled" class="disableCtrl" required="required">
                        <option value="">Select Category</option>
                    </select><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>Sub Category Name</label><input type="text" required="required" placeholder="Enter Sub Category name" id="subcatname" name="subcatname" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>Description</label><input type="text" placeholder="Enter Sub Category description" id="subcatdesc" name="subcatdesc" />
                </div>
            </fieldset>
            @{
                string ViewDataName = "GetSubCatogaryJson";
            }
            @Html.Partial("_ButtonGroup", ViewDataName)

        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="SubCatName">Sub Category</th>
                    <th id="CatName">Category</th>
                    <th id="Description" title="Product Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Sub Category</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>
@*}*@
