
@{
    ViewBag.Title = "GetVendor";
    Layout = "~/Areas/StockManagement/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Stock/Masters/Vendor.js"></script>
<form action="/" method="post" style="margin-top:60px" id="vendorform">
    <div class="container">
        <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">Add Vendor</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="hidden" value="0" id="vendorid" name="vendorid" />
                            <label>Vendor Name</label>
                            <input type="text" required="required" class="form-control" placeholder="Enter Vendor Name" id="vendorname" name="vendorname" />
                        </div>
                        <div class="col-sm-12">
                            <label>Vendor Mobile</label>
                            <input type="text" required="required" class="form-control" placeholder="Enter Vendor Mobile" id="vendormobile" name="vendormobile" />
                        </div>
                        <div class="col-sm-12">
                            <label>Vendor Address</label>
                            <input type="text" class="form-control" required="required" placeholder="Enter Vendor Address" id="vendoraddress" name="vendoraddress" />
                        </div>
                        <div class="col-sm-12">
                            <label>Description</label>
                            <input type="text" class="form-control" placeholder="Enter Vendor description" id="vendordesc" name="vendordesc" />
                        </div>
                        <div class="col-sm-12">
                            @{
                                string ViewDataName = "GetVendorJson";
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-footer">@Html.Partial("_ButtonGroup", ViewDataName)</div>
            </div>
        </div>
    </div>

    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="VendorName">Vendor</th>
                    <th id="VendorMobile">Mobile</th>
                    <th id="VendorAddress">Address</th>
                    <th id="Description" title="Product Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Vendor</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>