@using Myshop.App_Start;
@{
    ViewBag.Title = "Stock Entry";
    //Layout = "~/Areas/StockManagement/Views/Shared/_LayoutFullPage.cshtml";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Stock/Stock/Entry.js"></script>

<form action="/" method="post" id="stockentryform">
    <input type="hidden" id="layoutShopId" value="@WebSession.ShopId" />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div style="width: 100%;padding: 10px;text-align: center;border-bottom: 1px solid white;"></div>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-3">
                    <div class="">
                        <input type="hidden" value="0" id="stockid" name="stockid" />
                        <label>Vendor Name</label>
                        <select id="vendorid" name="vendorid" class="form-control" required="required">
                            <option value="">Select Seller Vendor</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <label>Vendor Receipt No.</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Vendor Receipt No." maxlength="10" id="vendorreceiptno" name="vendorreceiptno" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <label>Shop Receipt Entry No.</label>
                        <input type="text" placeholder="Shop Receipt Entry No." class="form-control" id="shopreceiptentryno" name="shopreceiptentryno" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <label>Vendor Receipt Date</label>
                        <input type="date" required="required" class="form-control" placeholder="Enter Vendor Receipt Date" id="vendorreceiptdate" name="vendorreceiptdate" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="">
                        <label>Total Amount</label>
                        <input type="number" required="required" readonly="readonly" class="form-control disableCtrl" placeholder="Enter Total Amount" id="totalamt" value="0.00" name="totalamt" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <label>Addition Amount</label>
                        <input type="number" required="required" class="form-control" value="0.00" placeholder="Enter Addition Amount" id="additionalamt" name="additionalamt" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <label>Paid Amount</label>
                        <input type="number" required="required" class="form-control" value="0.00" placeholder="Enter Paid Amount" id="paidamt" name="paidamt" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <label>Remaining Amount</label>
                        <input type="number" required="required" class="form-control disableCtrl" value="0.00" readonly="readonly" placeholder="Enter Remaining Amount" id="remainingamt" name="remainingamt" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div>
                        <label>Select Payment Mode</label>
                        <select id="paymodeid" name="paymodeid" class="form-control" required="required">
                            <option value="">Select Payment mode</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="hideCtrl">
                        <label>Account Number</label>
                        <select id="debitaccountid" class="form-control" name="debitaccountid">
                            <option value="">Select Debit Account</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="hideCtrl">
                        <label>Cheque No.</label>
                        <select id="ChequePageId" class="form-control" name="ChequePageId">
                            <option value="">Select Cheque Number</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="producttable-container tbl" style="margin:0 5px;width:99%;">
            <div class="popup" style="display:block !important;position: inherit;width: 100%;top:0;padding:5px 0;box-shadow: none;z-index:11">
                <table id="producttable" class="table table-striped table-bordered" cellspacing="0" width="121%">
                    <thead style="font-size:10px;">
                        <tr>
                            <th>#</th>
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Brand</th>
                            <th>Product</th>
                            <th>Purchase Price</th>
                            <th title="Product Quantity">Qty</th>
                            <th title="Total Price=Purchase Price * Product Quantity">Total Price</th>
                            <th>Sell Price</th>
                            <th>Color</th>
                            <th>Desc</th>
                            <th width="83px;"><div class="tool-Icon"><img data-newrow="" title="Add new Row" alt="Add Row" class="addRow" src="~/Images/Icons/if_plus_71021.png" /></div></th>
                        </tr>
                    </thead>
                    <tfoot style="font-size:10px">
                        <tr>
                            <th>#</th>
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Brand</th>
                            <th>Product</th>
                            <th>Purchase Price</th>
                            <th title="Product Quantity">Qty</th>
                            <th id="grandTotal" title="Total Price=Purchase Price * Product Quantity">Total Price</th>
                            <th>Sell Price</th>
                            <th>Color</th>
                            <th>Desc</th>
                            <th><div class="tool-Icon"><img data-newrow="" title="Add new Row" alt="Add Row" class="addRow" src="~/Images/Icons/if_plus_71021.png" /></div></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td>1.</td>
                            <td>
                                <input type="hidden" value="0" name="list[0].StockTrId" id="StockTrId__0" />
                                <select required="required" id="cat__0">
                                    <option value="">Select Catogary</option>
                                </select>
                            </td>
                            <td>
                                <select required="required" disabled="disabled" class="disableCtrl" id="catsub__0">
                                    <option value="">Select Sub Catogary</option>
                                </select>
                            </td>
                            <td>
                                <select required="required" name="list[0].BrandId" disabled="disabled" class="disableCtrl" id="brand__0">
                                    <option value="">Select Brand</option>
                                </select>
                            </td>
                            <td>
                                <select required="required" name="list[0].ProductId" disabled="disabled" class="disableCtrl" id="product__0">
                                    <option value="">Select Product</option>
                                </select>
                            </td>
                            <td>
                                <input type="number" name="list[0].PurchasePrice" placeholder="Purchase Price" class="txt55 disableCtrl" disabled="disabled" required="required" id="pp__0" />
                            </td>
                            <td>
                                <input type="number" name="list[0].Qty" placeholder="Enter Quantity" class="txt55 disableCtrl" disabled="disabled" required="required" id="quat__0" />
                            </td>
                            <td title="Total Price=Purchase Price * Product Quantity" id="total_price__0">00.00</td>
                            <td>
                                <input type="number" name="list[0].SellPrice" placeholder="Selling Price" class="txt55 disableCtrl" disabled="disabled" required="required" id="sp__0" />
                            </td>
                            <td>
                                <input type="color" name="list[0].Color" disabled="disabled" class="disableCtrl" id="color__0" />
                            </td>
                            <td>
                                <input type="text" name="list[0].Description" class="txt55 disableCtrl" placeholder="Enter Description" disabled="disabled" id="desc__0" />
                            </td>
                            <td>
                                <div class="tool-Icon"><img data-newrow="" data-crudtype="insert" id="addrow__0" alt="Reset Row" title="Reset this row" class="resetRow" src="~/Images/Icons/refresh.png" /></div>
                                <div class="tool-Icon"><img data-newrow="" alt="Remove Row" id="removerow__0" title="Remove this row" class="removeRow" src="~/Images/Icons/delete.png" /></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="btnGroup">
        @Html.Partial("_ButtonGroup", "GetStockJosn")
    </div>
</form>
<div class="popup" style="left: 9%;">
    <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
    <table id="popuptable" class="table table-striped table-bordered btn-shop-low" cellspacing="0" width="100%">
        <thead style="font-size:10px;">
            <tr>
                <th id="VendorName">Vender Name</th>
                <th id="PayMode">Payment Mode</th>
                <th id="VendorReceiptNo">Vendor Receipt No</th>
                <th id="VendorReceiptDate">Receipt Date</th>
                <th id="TotalAmt">Total Amount</th>
                <th id="PaidAmt">Paid Amount</th>
                <th id="AdditionalAmt">Addtional Amount</th>
                <th id="RemainingAmt">Remaining Amount</th>
                <th id="btnSelect">Select</th>
            </tr>
        </thead>
        <tfoot style="font-size:10px;">
            <tr>
                <th>Vender Name</th>
                <th>Payment Mode</th>
                <th>Vendor Receipt No</th>
                <th>Receipt Date</th>
                <th>Total Amount</th>
                <th>Paid Amount</th>
                <th>Addtional Amount</th>
                <th>Remaining Amount</th>
                <th>Select</th>
            </tr>
        </tfoot>
        <tbody style="font-size:11px;"></tbody>
    </table>
</div>
@*}*@
