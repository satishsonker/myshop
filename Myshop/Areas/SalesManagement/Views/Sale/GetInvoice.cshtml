@using Myshop.App_Start
@{
    ViewBag.Title = "GetInvoice";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Sales/Sale/GetInvoice.js"></script>
<div class="col-lg-12" style="height: 44px;background: #b0d0ff;padding: 5px;border-radius: 4px;">
    @Html.Partial("~/Views/shared/_SearchInvoice.cshtml")
</div>
<div class="col-lg-12" style="min-height: 610px;background: #b0d0ff;padding: 5px;border-radius: 4px;">
    <div class="shop_invoiceLayout">
        <div class="shopname" style="text-align:left;">
            @WebSession.ShopName
        </div>
        @{
            ShopCollection newColl = WebSession.ShopList.Where(x => x.ShopName.Equals(WebSession.ShopName)).FirstOrDefault();
            if (newColl != null)
            {
                string shopAddress = string.Format("{0}\n{1}\n{2}\nEmail : {3}\nMobile :{4}", newColl.ShopAddress, @newColl.ShopCity, @newColl.ShopState, @newColl.OwnerEmail ?? string.Empty, @newColl.OwnerMobile);
                <pre style="font-family: auto;font-size: 10px;width: 242px;padding:0;margin:-6px 0 0 12px;background: transparent;border: 0;">@shopAddress</pre>
            }
        }

        <div style="text-align:center;width: 100%;width: 98%;border-bottom: 1px solid;margin: 9px 12px;padding: 10px;font-size: 20px;">INVOICE</div>
        <div class="col-md-12">
            @{
                string customerInfo = string.Format("Customer Name : {0} \n{1}\n", "$name", "$address");
                <div class="col-md-6" style="padding-left:0px;">
                    <pre id="custPre" style="margin-left: 0px;padding: 0px;font-size: 15px;font-weight: bold;background: transparent;border: 0px;">@customerInfo</pre>
                </div>

                string invoiceInfo = string.Format("Invoice No. : {0} \n\nInvoice Date : {1}\n", "$invoiceNo", "$invoiceDate");
                <div class="col-md-6">
                    <pre id="invPre" style="margin-left: 0px;padding: 0px;font-size: 15px;font-weight: bold;background: transparent;border: 0px;">@invoiceInfo</pre>
                </div>
            }
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-responsive table-striped" id="tblInvoicedetails">
                <thead style="text-align:center">
                    <tr>
                        <th style="width:4%;">Sr.</th>
                        <th style="width:37%;">Product</th>
                        <th style="width:8%;">Discount</th>
                        <th style="width:19%;">Remark</th>
                        <th style="width:7%;">Price</th>
                        <th style="width:7%;">Qty</th>
                        <th style="width:10%;">Amount</th>
                    </tr>
                </thead>
                <tbody id="tblInvoice">
                    <tr class="defaultRow">
                        <td class="shop_vMiddle">1.</td>
                        <td class="shop_vMiddle">No Product were selected yet</td>
                        <td>0.00</td>
                        <td>0.00</td>
                        <td class="shop_vMiddle shop_hCentre">0.00</td>
                        <td class="shop_vMiddle shop_hCentre">0.00</td>
                        <td class="shop_vMiddle shop_hRigth">0.00</td>
                    </tr>
                    <tr class="tdSubTotal">
                        <td colspan="6" class="shop_hRigth">Sub Total</td>
                        <td colspan="1" id="lblSubTotal" class="shop_hRigth">0.00</td>
                    </tr>
                    <tr>
                        <td colspan="6" class="shop_hRigth">GST @@ 12%</td>
                        <td colspan="1" id="lblGst" class="shop_hRigth">0.00</td>
                    </tr>
                    <tr>
                        <td class="shop_hRigth" colspan="6" id="lblGrandTotalWord">Zero Only</td>
                        <td class="shop_hRigth" id="lblGrandAmount">0.00</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
    body {
        height: auto !important;
        background: #eef1f6 !important;
    }
</style>
