@using Myshop.App_Start
@{
    ViewBag.Title = "Sales Setting";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Sales/Setting/SalesSetting.js"></script>
<form action="/" method="post" style="margin-top:0px" id="salesettingform">
    <div class="container">
        <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">Sale Setting</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="hidden" value="0" id="salessettingid" name="id" />
                                <label>GSTIN</label>
                                <input type="text" required="required" placeholder="GSTIN" class="form-control" id="GSTIN" name="GSTIN" value="@WebSession.GSTIN" />
                            </div>
                            <div class="form-group">
                                <label>Sale Opening Time</label>
                                <input type="number" min="8" max="23" class="form-control" placeholder="Sale Opening Time" id="SaleOpeningTime" name="SaleOpeningTime" />
                            </div>
                            <div class="form-group">
                                <label>Sale Closing Time</label>
                                <input type="number" min="12" max="23" class="form-control" placeholder="Sale Closing Time" id="SaleClosingTime" name="SaleOpeningTime" />
                            </div>
                            <div class="form-group">
                                <label>Return Policy</label>
                                <input type="text" required="required" placeholder="GSTIN" class="form-control" id="ReturnPolicy" name="ReturnPolicy" />
                            </div>
                            @{
                                string ViewDataName = "GetDocProofTypeJson";
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-footer">@Html.Partial("_ButtonGroup", ViewDataName)</div>
            </div>
        </div>
    </div>

    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="DocProofType">Document Proof Type</th>
                    <th id="Description" title="Product Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Document Proof Type</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>

