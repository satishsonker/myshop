@using Myshop.App_Start
@{
    ViewBag.Title = "Sales Setting";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Sales/Setting/SalesSetting.js"></script>
<form action="/" method="post" style="margin-top:0px" id="salesettingform">
    <div class="container">
        <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">Sales Setting</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="col-lg-6 shop_noPadLeft">
                                    <input type="hidden" value="0" id="salessettingid" name="id" />
                                    <label>GSTIN</label>
                                    <input type="text" required="required" maxlength="15" placeholder="GSTIN" class="form-control" id="GSTIN" name="GSTIN" value="@WebSession.GSTIN" />
                                </div>
                                <div class="col-lg-6 shop_noPadRight">
                                    <label>GST % Rate</label>
                                    <input type="number" required="required" maxlength="15" placeholder="GST % Rate" class="form-control" id="gstRate" name="gstRate" />
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom:15px;">
                                <div class="col-lg-6 shop_noPadLeft">
                                    <label>Sale Opening Time</label>
                                    <input type="number" min="8" max="23" class="form-control" placeholder="Sale Opening Time" id="SalesOpeningTime" name="SalesOpeningTime" />
                                </div>
                                <div class="col-lg-6 shop_noPadRight">
                                    <label>Sale Closing Time</label>
                                    <input type="number" min="12" max="23" class="form-control" placeholder="Sale Closing Time" id="SalesClosingTime" name="SalesClosingTime" />
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom:15px;">
                                <div class="col-lg-6 shop_noPadLeft">
                                    <label>Weekly Closing Day</label>
                                    <select name="WeeklyClosingDay" id="WeeklyClosingDay" class="form-control">
                                        <option value="">Select Day</option>
                                        <option value="Monday">Monday</option>
                                        <option value="Tuesday">Tuesday</option>
                                        <option value="Wednesday">Wednesday</option>
                                        <option value="Thursday">Thursday</option>
                                        <option value="Friday">Friday</option>
                                        <option value="Saturday">Saturday</option>
                                        <option value="Sunday">Sunday</option>
                                    </select></div>
                                <div class="col-lg-6 shop_noPadRight">
                                    <label>Exchange Day & Time</label>
                                    <input type="text" maxlength="50" data-selectedday="" class="form-control" placeholder="Exchange Day & Time" id="ExchangeDayTime" name="ExchangeDayTime" />
                                <ul id="daySuggestion" class="shop_SearchControl"></ul>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Return Policy</label>
                                <input type="text" required="required" placeholder="Return Policy" class="form-control" id="ReturnPolicy" name="ReturnPolicy" />
                            </div>
                            @{
                                string ViewDataName = "SaleArea.settingsController.getSaleSettingJson";
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-footer">@Html.Partial("_ButtonGroup", ViewDataName)</div>
            </div>
        </div>
    </div>

    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="GSTIN">GSTIN</th>
                    <th id="GstRate">GST % Rate</th>
                    <th id="SalesOpeningTime">Shop opening time</th>
                    <th id="SalesClosingTime">Shop closing time</th>
                    <th id="WeeklyClosingDay">Shop opening time</th>
                    <th id="ExchangeDayTime">Shop closing time</th>
                    <th id="ReturnPolicy">Return policy</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>GSTIN</th>
                    <th>GST % Rate</th>
                    <th>Shop opening time</th>
                    <th>Shop closing time</th>
                    <th>Weekly closing day</th>
                    <th>Exchange Day Time</th>
                    <th>Return policy</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>

