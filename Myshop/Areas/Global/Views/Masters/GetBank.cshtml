
@{
    ViewBag.Title = "GetBank";
    Layout = "~/Areas/Global/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Global/Master/Banks.js"></script>
<form action="/" method="post" style="margin-top:60px" id="bankform">
    <div class="container">
        <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">Bank Details</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="hidden" value="0" id="bankid" name="bankid" />
                            <label>Bank Name</label>
                            <input type="text" required="required" placeholder="Enter Bank Name" class="form-control" id="bankname" name="bankname" />
                        </div>
                        <div class="col-sm-12">
                            <label>Description</label>
                            <input type="text" class="form-control" placeholder="Enter Bank Description" id="bankdesc" name="bankdesc" />
                        </div>
                            @{
                                string ViewDataName = "GetBankJson";
                            }
                    </div>
                </div>
                <div class="panel-footer">@Html.Partial("_ButtonGroup", ViewDataName)</div>
            </div>
            </div>
        </div>

    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="BankName">Bank Name</th>
                    <th id="Description" title="Product Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Bank Name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>
