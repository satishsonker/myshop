
@{
    ViewBag.Title = "GetLogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

<form action="/" method="post" style="margin-top:60px" id="logoform" enctype="multipart/form-data">
    <div class="container">
        <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">Upload Logo</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="hidden" value="0" id="bankid" name="bankid" />
                            <label>Shop Name</label>
                            <select class="form-control" id="ddlshop" name="shopid" required="required">
                                <option value="">Select Shop</option>
                            </select>
                        </div>
                        <div class="col-sm-12">
                            <label>Logo</label>
                            <br />
                            <label class="btn btn-primary" for="logoImage">
                                <input id="logoImage" name="logoImage" type="file" style="display:none"
                                       onchange="$('#upload-file-info').html(this.files[0].name)">
                                Select Logo File
                            </label>
                            <span class='label label-info' id="upload-file-info"></span>
                        </div>
                        @{
                            string ViewDataName = "GetBankJson";
                        }
                    </div>
                </div>
                <div class="panel-footer">@Html.Partial("_ButtonGroup", ViewDataName)</div>
            </div>
        </div>
    </div>

    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="BankName">Bank Name</th>
                    <th id="Description" title="Product Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Bank Name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>




<script src="~/Scripts/App/Area/Global/Master/AddLogo.js"></script>