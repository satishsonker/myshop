
@{
    ViewBag.Title = "GetBankAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Global/Master/BankAcc.js"></script>
<form action="/" method="post" style="margin-top:60px" id="bankaccform">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">Bank Account Details</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <input type="hidden" value="0" id="bankaccid" name="bankaccid" />
                        <label>Bank Name</label>
                        <select id="bankid" name="bankid" disabled="disabled" class="disableCtrl form-control" required="required">
                            <option value="">Select Bank</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label>Account No</label>
                        <input type="text" required="required" placeholder="Enter Account Number" class="form-control" id="accountno" name="accountno" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>Select Account Type</label>
                        <select id="acctypeid" name="acctypeid" disabled="disabled" class="disableCtrl form-control" required="required">
                            <option value="">Select Account Type</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label>Branch Name</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Branch Name" id="branchname" name="branchname" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>Account Name</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Account Name" id="accountname" name="accountname" />
                    </div>
                    <div class="col-sm-6">
                        <label>Branch IFSC Code</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Branch IFSC Code" id="branchifsc" name="branchifsc" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>Account Holder Name</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Account Holder Name" id="accountholdername" name="accountholdername" />
                    </div>
                    <div class="col-sm-6">
                        <label>Branch Address</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Branch Address" id="branchaddress" name="branchaddress" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @{
                    string ViewDataName = "GetBankAccounJson";
                }
                @Html.Partial("_ButtonGroup", ViewDataName)
            </div>
        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="AccountNo">Account No</th>
                    <th id="AccountName">Account Name</th>
                    <th id="AccountType">Account Type</th>
                    <th id="BankName">Bank Name</th>
                    <th id="AccHolderName">Acc. Holder rName</th>
                    <th id="BranchName">Branch</th>
                    <th id="BranchIFSC">IFSC</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Account No</th>
                    <th>Account Name</th>
                    <th>Account Type</th>
                    <th>Bank Name</th>
                    <th>Acc. Holder rName</th>
                    <th>Branch</th>
                    <th>IFSC</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>
