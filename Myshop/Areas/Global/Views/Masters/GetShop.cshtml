
@{
    ViewBag.Title = "GetShop";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Global/Master/Shops.js"></script>
<form action="/" method="post" style="margin-top:0px" id="shopform">
    <div class="container">
        <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">Shop Details</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="hidden" value="0" id="shopid" name="shopid" />
                            <label>Shop Name</label>
                            <input type="text" required="required" placeholder="Enter Shop Name" class="form-control" id="name" name="name" />
                        </div>
                        <div class="col-sm-12">
                            <label>Shop Owner</label>
                            <select class="form-control" name="ownerid" id="owner" required="required">
                                <option value="">Select Shop Owner</option>
                            </select>
                        </div>
                        <div class="col-sm-12">
                            <label>Mobile</label>
                            <input type="text" required="required" maxlength="13" placeholder="Enter Owner Mobile" class="form-control" id="mobile" name="mobile" />
                        </div>
                        <div class="col-sm-12">
                            <label>Email</label>
                            <input type="text" required="required" maxlength="50" placeholder="Enter Owner Email" class="form-control" id="email" name="email" />
                        </div>

                        <div class="col-sm-12">
                            <label>GSTIN</label>
                            <input title="Goods & Services Taxpayer Identification Number (GSTIN)" type="text" required="required" placeholder="Enter Shop GSTIN" class="form-control" id="gstin" name="gstin" />
                        </div>
                        <div class="col-sm-12">
                            <label>Address</label>
                            <input type="text" required="required" placeholder="Enter Shop Address" class="form-control" id="address" name="address" />
                        </div>
                        <div class="col-sm-12">
                            @Html.Partial("~/Views/Shared/_StateCity.cshtml")
                        </div>
                        @{
                            string ViewDataName = "GetShopJsonUrl";
                        }
                    </div>
                </div>
                <div class="panel-footer">@Html.Partial("_ButtonGroup", ViewDataName)</div>
            </div>
        </div>
    </div>

    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="Name">Shop Name</th>
                    <th id="Mobile">Mobile</th>
                    <th id="Email">Email</th>
                    <th id="OwnerName">Owner Name</th>
                    <th id="Address">Address</th>
                    <th id="District">District</th>
                    <th id="State">State</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</form>




