
@{
    ViewBag.Title = "GetNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Global/Master/Notify.js"></script>
<form action="/" method="post" style="margin-top:60px" id="notifyform">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">Notification</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <label>Notification Type</label>
                        <select id="ddlNotificationtypeid" name="notificationtypeid" class="form-control" required="required">
                            <option value="">Select Notification Type</option>
                        </select>
                        <input type="hidden" value="0" id="notificationid" name="notificationtypeid" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>User</label>
                        <select id="ddlUserid" name="userid" class="form-control" required="required">
                            <option value="">Select User</option>
                            <option value="0">All Users</option>
                        </select>
                        <input type="hidden" value="false" id="isforall" name="isforall" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Message</label>
                        <input type="text" class="form-control" placeholder="Enter Notification Message" id="Message" name="Message" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Message Expire Date</label>
                        <input type="datetime-local" class="form-control" placeholder="Enter Notification Message" id="MessageExpireDate" name="MessageExpireDate" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @{
                    string ViewDataName = "GetNotificationJson";
                }
                @Html.Partial("_ButtonGroup", ViewDataName)
            </div>
        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="NotificationType">Notification Type</th>
                    <th id="UserName">User Name</th>
                    <th id="Message">Message</th>
                    <th id="MessageExpireDate">Message Expire Date</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Notification Type</th>
                    <th>User Name</th>
                    <th>Message</th>
                    <th>Message Expire Date</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>




