    .user_profile {
        text-align: center;
        padding: 0px 0 10px 0;
    }

        .user_profile #imguserpicture {
            border: 1px solid;
            border-radius: 83px;
            margin-top: -9px;
            width: 150px;
            height: 150px;
        }

        .user_profile #changeProfile {
            position: absolute;
            height: 30px;
            bottom: 16px;
            left: 55%;
            cursor: pointer;
        }
</style>


