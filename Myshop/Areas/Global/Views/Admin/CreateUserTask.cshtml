
@{
    ViewBag.Title = "CreateUserTask";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Global/Admin/CreateTask.js"></script>
<form action="/" method="post" style="margin-top:60px" id="createtaskform">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-info">
            <div class="panel-heading">Create User</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <input type="hidden" id="taskid" name="taskid" value="0" />
                        <label>Select User</label>
                        @{
                            string ControlId = "AssignedUserId";
                        }
                        @Html.Partial("_userList", ControlId)
                        @*<select id="userid" name="userid" disabled="disabled" class="disableCtrl form-control" required="required">
                            <option value="">Select User</option>
                        </select>*@
                    </div>
                    <div class="col-sm-12">
                        <label>Task Description</label>
                        <textarea maxlength="500" cols="100" style="resize:none" rows="5" name="taskdetails" id="taskdetails" required="required" class="form-control"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>Priority</label>
                        <select required class="form-control" name="priority" id="priority" >
                            <option value="">Select Priority</option>
                            <option value="1">Severe</option>
                            <option value="2">High</option>
                            <option value="3">Medium</option>
                            <option value="4">Low</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <label>Is Important</label>
                        <input type="checkbox" class="form-control" value="false"  id="IsImportant" name="IsImportant" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @{
                    string ViewDataName = "GlobalArea.AdminController.TaskUserList";
                }
                @Html.Partial("_ButtonGroup", ViewDataName)
            </div>
        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="TaskCreatedByPhoto">Photo</th>
                    <th id="TaskCreatedByName">Task Created By</th>
                    <th id="TaskDetails">Task</th>
                    <th id="TaskAssignedUserName">Assigned User</th>
                    <th id="Priority">Priority</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Photo</th>
                    <th>Task Created By</th>
                    <th>Task</th>
                    <th>Assigned User</th>
                    <th>Priority</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>
