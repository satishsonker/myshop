@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Common/DatetimePicker.js"></script>
<script src="~/Scripts/App/Area/Global/Setting/Downtime.js"></script>
<link href="~/Content/Datetimepicker.css" rel="stylesheet" />

<form action="/" method="post" style="margin-top:60px" id="downtimeform">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">Application Downtime</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <label>Downtime Message</label>
                        <input type="text" required="required" class="form-control" placeholder="Enter Downtime Message" id="message" name="message" />
                        <input type="hidden" value="0" id="downtimeid" name="id" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Start Date & Time</label>
                        <input type="text" class="form-control" required="required" placeholder="Enter Downtime Start Date & Time" id="DownTimeStart" name="downtimestartdate" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Endt Date & Time</label>
                        <input type="text" class="form-control" required="required" placeholder="Enter Downtime End Date & Time" id="DownTimeEnd" name="downtimeenddate" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @{
                    string ViewDataName = "GetDowntimeJson";
                }
                @Html.Partial("_ButtonGroup", ViewDataName)
            </div>
        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="Message">Downtime Message</th>
                    <th id="DownTimeStartDate" data-dateformat="full">Downtime start</th>
                    <th id="DownTimeEndDate" data-dateformat="full">Downtime end</th>
                    <th id="UserName">Downtime set by</th>
                    <th id="CreatedDate">Created date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Downtime Message</th>
                    <th>Downtime start</th>
                    <th>Downtime end</th>
                    <th>Downtime set by</th>
                    <th>Created date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>