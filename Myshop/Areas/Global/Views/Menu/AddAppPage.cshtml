
@{
    ViewBag.Title = "AddAppPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/App/Area/StockManagement/Main.css" rel="stylesheet" />
<link href="~/Content/App/Home/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<script src="~/Scripts/App/Area/Global/Menu/AppPage.js"></script>
<form action="/" method="post" style="margin-top:60px" id="pageform">
    <input type="hidden" id="moduleurl" data-request-url="/Global/Menu/GetAppModules" />
    <input type="hidden" id="pageurl" data-request-url="/Global/Menu/GetAppPages" />
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">Add Application Page</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <label>App Module</label>
                        <select id="moduleid" class="form-control" name="moduleid" required="required">
                            <option value="">Select Module</option>
                        </select>
                        <input type="hidden" value="0" id="pageid" name="pageid" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Parent Page</label>
                        <select id="parentid" class="form-control" name="parentid">
                            <option value="0">Select Parent Page</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Page Name</label>
                        <input type="text" class="form-control" required="required" placeholder="Enter Page Name" id="pagename" name="pagename" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>URL</label>
                        <input type="text" class="form-control" placeholder="Enter Page URL" id="url" name="url" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Description</label>
                        <input type="text" class="form-control" placeholder="Enter Page Description" id="pagedesc" name="pagedesc" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @{
                    string ViewDataName = "GetAppPageJson";
                }
                @Html.Partial("_ButtonGroup", ViewDataName)
            </div>
        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="ModuleName">Module Name</th>
                    <th id="PageName">Page Name</th>
                    <th id="Url">Page URL</th>
                    <th id="ParentPageName">Parent Page</th>
                    <th id="ParentUrl">Parent Page URL</th>
                    <th id="Description" title="Product Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Module Name</th>
                    <th>Page Name</th>
                    <th>Page URL</th>
                    <th>Parent Page</th>
                    <th>Parent Parent URL</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>
