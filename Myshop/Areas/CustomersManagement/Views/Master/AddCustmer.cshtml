    {*@
<form action="/" method="post" style="margin-top:60px" id="customerform">
    <div class="container">
        <div class="holder">
            <h3 class="text-center">Add Customer</h3>
            <fieldset>
                <input type="hidden" value="0" id="customerid" name="customerid" />
                <div class="control">
                    <label>Customer Type</label>
                    <select class="form-control" id="customertypeid" required="required" name="customertypeid">
                        <option value="">Select Customer Type</option>
                    </select>
                    <p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>Firstname</label><input type="text" required="required" placeholder="Enter Customer Firstname" id="firstname" name="firstname" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>Middlename</label><input type="text" placeholder="Enter Customer Middlename" id="middlename" name="middlename" />
                </div>
                <div class="control">
                    <label>Lastname</label><input type="text" required="required" placeholder="Enter Customer Lastname" id="lastname" name="lastname" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>Mobile</label><input type="text" required="required" placeholder="Enter Customer Mobile" id="mobile" name="mobile" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>Email</label><input type="text" placeholder="Enter Customer Email" id="email" name="email" />
                </div>
                <div class="control">
                    <label>Address</label><input type="text" placeholder="Enter Address" id="address" name="address" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>District</label><input type="text" placeholder="Enter District" id="district" name="district" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>State</label><input type="text" placeholder="Enter state" id="state" name="state" /><p class="requiredControl">*</p>
                </div>
                <div class="control">
                    <label>PIN Code</label><input type="text" placeholder="Enter PIN Code" id="pincode" name="pincode" /><p class="requiredControl">*</p>
                </div>
            </fieldset>

            @{
                string ViewDataName = "GetCustmerJson";
            }
            @Html.Partial("_ButtonGroup", ViewDataName)

        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="FirstName">Firstname</th>
                    <th id="MiddleName">Middlename</th>
                    <th id="LastName">Lastname</th>
                    <th id="Mobile">Mobile</th>
                    <th id="Email">Email</th>
                    <th id="Address">Address</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Firstname</th>
                    <th>Middlename</th>
                    <th>Lastname</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Date</th>
                    <th>Select</th>
                </tr>
            </tfoot>
            <tbody></tbody>
        </table>
    </div>
</form>
