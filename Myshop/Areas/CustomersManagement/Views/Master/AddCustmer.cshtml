                            <select class="form-control" id="customertypeid" required="required" name="customertypeid">
                                <option value="">Select Customer Type</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Firstname</label>
                            <input type="text" required="required" placeholder="Enter Customer Firstname" id="firstname" name="firstname" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Middlename</label><input type="text" placeholder="Enter Customer Middlename" id="middlename" name="middlename" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Lastname</label><input type="text" required="required" placeholder="Enter Customer Lastname" id="lastname" name="lastname" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Mobile</label><input type="text" required="required" placeholder="Enter Customer Mobile" id="mobile" name="mobile" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Email</label><input type="text" placeholder="Enter Customer Email" id="email" name="email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Address</label><input type="text" placeholder="Enter Address" id="address" name="address" class="form-control" />
                        </div>
                        @Html.Partial("~/Views/shared/_StateCity.cshtml")
                        <div class="form-group">
                            <label>PIN Code</label><input type="text" placeholder="Enter PIN Code" id="pincode" name="pincode" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    @{
                        string ViewDataName = "GetCustmerJson";
                    }
                    @Html.Partial("_ButtonGroup", ViewDataName)
                </div>
            </div>
            </div>
        </div>
