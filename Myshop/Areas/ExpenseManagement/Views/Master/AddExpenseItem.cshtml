
@{
    ViewBag.Title = "AddExpenseItem";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Expense/Master/ExpenseItem.js"></script>
<form action="/" method="post" style="margin-top:0px" id="expitemform">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-info">
            <div class="panel-heading">Add Expense Item</div>
            <div class="panel-body">
                <div class="form-group">
                    <label>Expense Type</label>
                    <select class="form-control" name="exptypeid" id="exptypeid">
                        <option value="">Select Expense Type</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Expense Item Name</label>
                    <input type="text" class="form-control" name="expitem" id="expitem" />
                    <input type="hidden" id="expitemid" value="0" />
                </div>
                <div class="form-group">
                    <label>Expense Item Price</label>
                    <input type="text" class="form-control" name="expitemprice" id="expitemprice" />
                </div>
                <div class="form-group">
                    <label>Expense Item Description</label>
                    <input type="text" class="form-control" name="expitemdesc" id="expitemdesc" />
                </div>
            </div>
            <div class="panel-footer">
                @{
                    string ViewDataName = "ExpenseArea.MasterController.GetExpItemJson";
                }
                @Html.Partial("_ButtonGroup", ViewDataName)
            </div>
        </div>
    </div>
    <div class="popup">
        <div><img src="~/Images/Icons/if_Close_Icon_1398919.png" id="popupclose" onclick="utility.popupClose()" title="Close" alt="close" style="float: right;padding-bottom: 5px;" /></div>
        <table id="popuptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th id="ExpTypeName">Expense Type</th>
                    <th id="ExpItem">Expense Item</th>
                    <th id="ExpItemDesc" title="Expense Description">Description</th>
                    <th id="CreatedDate">Date</th>
                    <th id="btnSelect">Select</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</form>

