
@{
                /**/

                ViewBag.Title = "AddExpenses";
                Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Expense/Expense/AddExpense.js"></script>

<div class="panel panel-info">
    <div class="panel-heading">Add New Expense</div>
    <div class="panel-body">
        <div>
            <span class="pull-left">
                <i class="fas fa-rupee-sign black-text lblexpenseno">Expense No. 0</i>
            </span>
            <span class="pull-right" style="margin-bottom:10px;">
                <button id="btnList" class="btn btn-success pull-right btn-sm">
                    <i class="fas fa-list-ol black-text"></i> List</button>
                <button id="btnNew" class="btn btn-success pull-right btn-sm" style="margin-right:10px;">
                    <i class="fas fa-rupee-sign black-text"></i> New</button>
                <button id="btnSave" class="btn btn-success pull-right btn-sm" style="margin-right:10px;">
                    <i class="fas fa-save black-text"></i> Save</button>
            </span>
        </div>
        <table class="table table-striped table-responsive table-bordered" id="tblExpense">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Expense Item</th>
                    <th>Expense Type</th>
                    <th>Unit</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr class="defaultrow">
                    <td class="shop_vMiddle">1.</td>
                    <td>
                        <input type="text" style="width:88%" id="_ptlSearchExpenseItem" class="form-control shop_floatLeft" data-data="" placeholder="Search Item" />
                        <ul class="shop_SearchControl" style="left:167px;width:251px;" id="_ptlSearchProductList"></ul>
                        <i class="fas fa-plus shop_floatLeft fontIcon colorGreen img-responsive" title="Add Product" id="_ptlSearchItemAdd"></i>
                    </td>
                    <td class="shop_vMiddle shop_hCentre">No Type</td>
                    <td class="shop_vMiddle shop_hCentre">No Unit</td>
                    <td class="shop_vMiddle shop_hCentre">0.00</td>
                    <td class="shop_vMiddle shop_hCentre"><input type="number" class="form-control" id="defaultQty" placeholder="Qty" min="1" max="99999" /></td>
                    <td class="shop_vMiddle shop_hRigth">0.00</td>
                    <td class="shop_vMiddle shop_hCentre" style="width:72px;">
                        <div class="btn-group-sm">
                            <img style="width:25px;cursor:pointer;" id="btnDelete_" title="Delete this row" src="~/Images/Icons/delete.png" />
                            <img style="width:25px;cursor:pointer;" id="btnReset_" title="Reset this row" src="~/Images/Icons/refresh.png" />
                        </div>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" class="shop_vMiddle shop_hRigth">Total Amount</td>
                    <td class="shop_vMiddle shop_hRigth lbltotalamount">0.00</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div>
            <div class="col-lg-3">
                <select class="form-control" id="vendorid" name="vendorid" style="float:left">
                    <option value="">Select Vendor</option>
                </select>
            </div>
            <div class="col-lg-5"> @Html.Partial("~/views/shared/_PaymentModeDropdown.cshtml")</div>
            <div class="col-lg-2"><input type="number" id="txtPaidAmount" value="0.00" min="0" max="0" class="form-control" /></div>
            <div class="col-lg-2"><input type="number" id="txtBalanceAmount" value="0.00" min="0" max="0" class="form-control" /></div>
        </div>
    </div>
</div>

