
@{
    ViewBag.Title = "ExpenseDetails";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Expense/Expense/ExpenseDetails.js"></script>
<img class="shop_addIcon" title="Click here to add new expense" src="/Images/Icons/expense.png" href="/ExpenseManagement/expense/AddExpenses">
<div class="panel panel-info">
    <div class="panel-heading">Expense Details</div>
    <div class="panel-body">
        <div>
            @*<span class="pull-left">
                    <i class="fas fa-rupee-sign black-text lblexpenseno">Expense No. 0</i>
                </span>*@
            <div class="pull-left col-lg-7" style="margin-bottom:10px;padding-left:0px;">
                <div class="input-group  pull-left" style="width: 73%;">
                    <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                    <input type="number" min="1" style="height:32px;" max="9999999" id="txtSearchExpense" placeholder="Search Expense No." class="form-control" />
                </div>
                <ul class="expList"></ul>
                <button id="btnGo" class="btn btn-success pull-left btn-sm" style="margin-left:10px;">
                    <i class="fas fa-arrow-down black-text"></i> Go
                </button>
                <button id="btnList" class="btn btn-success pull-left btn-sm" style="margin-left:10px;">
                    <i class="fas fa-list black-text"></i> Go to List
                </button>
            </div>
        </div>
        <table class="table table-striped table-responsive table-bordered" id="tblExpense">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Expense Item</th>
                    <th>Expense Type</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="5" class="shop_vMiddle shop_hRigth" style="background-color:aquamarine;">Total Amount</td>
                    <td class="shop_vMiddle shop_hRigth lbltotalamount" style="font-size:16px;background-color:aquamarine;font-weight:600;"><strong>0.00</strong></td>
                </tr>
            </tfoot>
        </table>
        <div>
            <div class="col-lg-3">
                <i class="fas fa-user black-text"> <span id="vendorid" data-toggle="tooltip" data-placement="top" title="Vendor Name">No Vendor</span></i>
            </div>
            <div class="col-lg-3">
                <i class="fas fa-receipt black-text"> Pay through : <span id="paidby">No Payment</span></i>
            </div>
            <div class="col-lg-2">
               
                <i class="fas fa-receipt black-text"><span data-toggle="tooltip" data-placement="top" title="Payment Reference Number"> Ref# No. :</span>
                    <span id="paidRef">No Reference</span>
                </i>
            </div>
            <div class="col-lg-2"><span data-toggle="tooltip" data-placement="top" title="Amount Paid to Vendor">Paid Amount : </span><i class="fas fa-rupee-sign black-text green-text"> <span id="paidamount">0.00</span></i></div>
            <div class="col-lg-2">Balance Amount : <i class="fas fa-rupee-sign red-text"> <span id="balamount">0.00</span></i></div>
        </div>
    </div>
</div>
<style>
    .expList {
        width: 64%;
        position: absolute;
        border: 1px solid;
        left: 43px;
        top: 32px;
        display: none;
        padding: 0;
        z-index:99999999999999;
    }

        .expList li {
            height: 48px;
            list-style: none;
            border-bottom: 1px solid;
            padding: 0px 10px;
            background: #fffdfd;
        }

            .expList li:hover {
                cursor: pointer;
                background: aliceblue;
            }
</style>
