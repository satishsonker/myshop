
@{
    ViewBag.Title = "Expense Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/App/Area/Expense/Expense/ExpenseDetails.js"></script>
<img class="shop_addIcon" title="Click here to add new expense" src="/Images/Icons/expense.png" href="/ExpenseManagement/expense/AddExpenses">
<div class="panel panel-info">
    <div class="panel-heading">Expense Details</div>
    <div class="panel-body">
        <div>
            @*<span class="pull-left">
                    <i class="fas fa-rupee-sign black-text lblexpenseno">Expense No. 0</i>
                </span>*@
            <div class="pull-left col-lg-10" style="margin-bottom:10px;padding-left:0px;">
                <div class="input-group  pull-left" style="width: 65%;">
                    <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                    <input type="number" min="1" style="height:32px;" max="9999999" id="txtSearchExpense" placeholder="Search Expense No." class="form-control" />
                </div>
                <ul class="expList"></ul>
                <button id="btnGo" class="btn btn-success pull-left btn-sm" style="margin-left:10px;">
                    <i class="fas fa-arrow-down black-text"></i> Go
                </button>
                <button id="btnList" class="btn btn-success pull-left btn-sm" style="margin-left:10px;">
                    <i class="fas fa-list black-text"></i> Go to List
                </button>
                <button id="btnCancel" class="btn btn-danger pull-left btn-sm" style="margin-left:10px;display:none;">
                    <i class="fas fa-times black-text"></i> Cancel Expense
                </button>
            </div>
        </div>
        <table class="table table-striped table-responsive table-bordered" id="tblExpense">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Expense Item</th>
                    <th>Expense Type</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Amount</th>
                    <th style="width: 90px;">Cancel Item</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="5" class="shop_vMiddle shop_hRigth" style="background-color:aquamarine;">Total Amount</td>
                    <td class="shop_vMiddle shop_hRigth lbltotalamount" style="font-size:16px;background-color:aquamarine;font-weight:600;"><strong>0.00</strong></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div>
            <table class="table">
                <tr>
                    <td>Vendor</td>
                    <td><i class="fas fa-user black-text"> <span id="vendorid" data-toggle="tooltip" data-placement="top" title="Vendor Name">No Vendor</span></i></td>
                    <td>Pay through</td>
                    <td> <i class="fas fa-receipt black-text"><span id="paidby">No Payment</span></i></td>
                </tr>
                <tr>
                    <td>Ref# No.</td>
                    <td>
                        <i class="fas fa-receipt black-text">
                            <span data-toggle="tooltip" data-placement="top" title="Payment Reference Number"> </span>
                            <span id="paidRef">No Reference</span>
                        </i>
                    </td>
                    <td>Paid Amount </td>
                    <td>
                    <i data-toggle="tooltip" data-placement="top" title="Amount Paid to Vendor" class="fas fa-rupee-sign black-text green-text"> <span id="paidamount">0.00</span></i>
                    </td>
                </tr>
                <tr>
                    <td>Balance Amount</td>
                    <td><i class="fas fa-rupee-sign red-text"> <span id="balamount">0.00</span></i></td>
                    <td>Cancel Reason</td>
                    <td><i class="fas fa-times red-text"> <span id="calreason">Not Cancelled</span></i></td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="cancelreason">
    <div class="panel panel-info">
        <div class="panel-heading">
            Cancel Reason
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label>Cancel Reason<strong style="color:red;">*</strong></label>
                <input type="text" class="form-control" placeholder="Cancel Reason" id="txtCancelReason" maxlength="100" />
            </div>
        </div>
        <div class="panel-footer" style="height: 43px;padding: 5px 15px;">
            <div class="pull-right">
                <button id="btnCancelMain" data-id="" data-type="" class="btn btn-success pull-left btn-sm" style="margin-left:10px;">
                    <i class="fas fa-check black-text"></i> OK
                </button>
                <button id="btnCancelRemark" class="btn btn-danger pull-left btn-sm" style="margin-left:10px;">
                    <i class="fas fa-times black-text"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>
<style>
    .cancelreason {
        position: fixed;
        top: 0;
        left: 0;
        background: #0000006b;
        width: 100%;
        height: 100%;
        z-index: 9999999;
        display: none;
    }

        .cancelreason .panel-info {
            width: 40%;
            margin-left: 30%;
            margin-top: 10%;
        }

    .expList {
        width: 64%;
        position: absolute;
        border: 1px solid;
        left: 43px;
        top: 32px;
        display: none;
        padding: 0;
        z-index: 99999999999999;
    }

        .expList li {
            height: 48px;
            list-style: none;
            border-bottom: 1px solid;
            padding: 0px 10px;
            background: #fffdfd;
        }

            .expList li:hover {
                cursor: pointer;
                background: aliceblue;
            }

    .cancelitem td {
        background-color: antiquewhite !important;
        color: red;
    }

    .cancelitem {
        background-color: antiquewhite !important;
        color: red;
    }
</style>
